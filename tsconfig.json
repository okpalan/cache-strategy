{
    "compilerOptions": {
        "allowJs": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmitOnError": true,
        "baseUrl": "./src",
        "outDir": "dist",
        "sourceMap": true,
        
        "paths": {
            "*": [
                "node_modules/*",
                "src/@types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}